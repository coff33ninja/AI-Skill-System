# Gemini API Keys (add multiple for load balancing/rotation)
GEMINI_KEY_1=your_api_key_here
GEMINI_KEY_2=optional_second_key
GEMINI_KEY_3=optional_third_key

# Machine Identity
MACHINE_ID=my-machine
MACHINE_NAME=My Computer

# ============================================================
# MODE - How this machine operates
# ============================================================
# voice  = Hands-free. Just speak, no typing. Best for accessibility.
# text   = Keyboard input only. Type commands in terminal.
# hybrid = Both voice and keyboard work together.
# node   = Mesh node only. Receives commands from other machines.
# server = HTTP/WebSocket API. Control via web requests.
# relay  = Voice controls REMOTE machines (not this one).
MODE=voice

# ============================================================
# Server Mode Settings (MODE=server)
# ============================================================
SERVER_PORT=3000

# ============================================================
# Relay Mode Settings (MODE=relay)
# ============================================================
# IP address of the machine you want to control
REMOTE_HOST=192.168.1.100
REMOTE_PORT=8080
REMOTE_TOKEN=your_mesh_auth_token

# ============================================================
# Mesh Node Settings (MODE=node or ENABLE_MESH=true)
# ============================================================
# Allow other machines to control this one
ENABLE_MESH=false
MESH_PORT=8080
MCP_MESH_AUTH_TOKEN=choose_a_secret_password

# ============================================================
# Security
# ============================================================
CONTROL_TIMEOUT_MS=300000
REQUIRE_CONFIRMATION=true
